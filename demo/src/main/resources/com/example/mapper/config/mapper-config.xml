<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

	<!--Mybatis 설정 -->
	<!-- https://mybatis.org/mybatis-3/configuration.html#settings -->
	<settings>
		<!-- 전통적인 데이터베이스 컬럼명 형태인 A_COLUMN을 CamelCase형태의 자바 프로퍼티명 형태인 aColumn으로 
			자동으로 매핑하도록 함 -->
		<setting name="mapUnderscoreToCamelCase" value="true"></setting>

		<!-- 파라미터에 Null 값이 있을 경우 에러 처리 -->
		<setting name="jdbcTypeForNull" value="VARCHAR"></setting>

		<!-- Sets the number of seconds the driver will wait for a response from 
			the database. -->
		<!-- 드라이버가 데이터베이스로부터 응답을 기다리는 시간을 초 단위로 설정합니다. -->
		<!-- 1초 -->
		<setting name="defaultStatementTimeout" value="1" />

	</settings>

</configuration>